<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Scouting" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="FilePickerTheme" parent="UnicornFilePicker.Default">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="unicorn.fabColor">@color/purple_200</item>
        <item name="unicorn.file.selectionTint">@color/ic_launcher_background</item>
        <item name="unicorn.file.arrowIconTint">@color/purple_200</item>
        <item name="unicorn.colorAccent">@color/purple_200</item>
    </style>
</resources>